generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Models
// ============================================

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String         @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  emailAccounts  EmailAccount[]
  agentRuns      AgentRun[]
  rules          UserRule[]
  autoActions    AutoAction[]
  companyDomains String[]
  dailyDigestEnabled Boolean    @default(false)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Email Models
// ============================================

model EmailAccount {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider     String    // "gmail" | "outlook"
  email        String
  accessToken  String    @db.Text
  refreshToken String    @db.Text
  expiresAt    DateTime?
  syncCursor   String?   @db.Text // Gmail historyId / Graph deltaLink
  lastSyncAt   DateTime?
  isActive     Boolean   @default(true)
  emails       Email[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, provider, email])
  @@index([userId])
}

model Email {
  id             String          @id @default(cuid())
  accountId      String
  account        EmailAccount    @relation(fields: [accountId], references: [id], onDelete: Cascade)
  externalId     String
  threadId       String?
  from           String
  fromName       String?
  to             String[]
  cc             String[]
  subject        String          @default("")
  snippet        String?
  bodyText       String?         @db.Text
  bodyHtml       String?         @db.Text
  receivedAt     DateTime
  isRead         Boolean         @default(false)
  hasAttachments Boolean         @default(false)
  attachments    Json?           // [{filename, mimeType, size}]
  labels         String[]
  isMailingList  Boolean         @default(false)
  listId         String?
  classification Classification?
  drafts         Draft[]
  createdAt      DateTime        @default(now())

  @@unique([accountId, externalId])
  @@index([accountId, receivedAt(sort: Desc)])
  @@index([threadId])
  @@index([from])
}

model Classification {
  id             String    @id @default(cuid())
  emailId        String    @unique
  email          Email     @relation(fields: [emailId], references: [id], onDelete: Cascade)
  priority       Int       // 1=Immediate, 2=Important, 3=Moderate, 4=Low, 5=Noise
  category       String    // "approval", "reply-needed", "task", "meeting", "fyi", "personal", "support", "finance", "travel", "shipping", "security", "social", "notification", "newsletter", "marketing", "spam"
  needsReply     Boolean   @default(false)
  needsApproval  Boolean   @default(false)
  isThreadActive Boolean   @default(false)
  actionItems    Json?     // [{description: string, dueDate?: string}]
  deadline       DateTime? // Earliest actionable deadline extracted from email (bill due date, task due date, etc.)
  summary        String?
  confidence     Float?
  classifierVersion String?
  originalPriority  Int?      // GPT's initial priority (preserved across user overrides)
  originalCategory  String?   // GPT's initial category (preserved across user overrides)
  userOverride   Boolean   @default(false)
  handled        Boolean   @default(false)
  handledAt      DateTime?
  threadResolved Boolean   @default(false)
  snoozedUntil   DateTime?
  topics         String[]  // 1-3 topic tags extracted by classifier
  sentiment      String?   // "positive", "neutral", "negative", "urgent"
  classifiedAt   DateTime  @default(now())

  @@index([priority])
  @@index([category])
  @@index([deadline])
  @@index([handled])
  @@index([snoozedUntil])
}

model ClassificationHistory {
  id                String   @id @default(cuid())
  emailId           String
  priority          Int
  category          String
  confidence        Float?
  classifierVersion String?
  reason            String?  // "initial", "hot-thread", "user-override", "re-classify", "user-rule"
  createdAt         DateTime @default(now())

  @@index([emailId, createdAt(sort: Desc)])
}

model Draft {
  id        String   @id @default(cuid())
  emailId   String
  email     Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
  subject   String
  body      String   @db.Text
  tone      String?  // "professional", "casual", "formal"
  status    String   @default("pending") // "pending", "approved", "sent", "discarded"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([emailId])
  @@index([status])
}

model AgentRun {
  id               String    @id @default(cuid())
  userId           String
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  trigger          String    // "manual" | "cron"
  status           String    // "running", "completed", "failed"
  emailsFetched    Int       @default(0)
  emailsClassified Int       @default(0)
  draftsGenerated  Int       @default(0)
  errorMessage     String?
  startedAt        DateTime  @default(now())
  completedAt      DateTime?

  @@index([userId, startedAt(sort: Desc)])
}

model SenderProfile {
  id              String    @id @default(cuid())
  userId          String
  senderEmail     String
  senderName      String?
  totalEmails     Int       @default(0)
  lastEmailAt     DateTime?
  avgResponseTime Float?
  relationship    String?
  isVip           Boolean   @default(false)
  vipReason       String?
  topics          String[]
  sentiment       String?
  recentEmailCount Int      @default(0)
  recentWindowStart DateTime?
  overrideCount   Int       @default(0)
  updatedAt       DateTime  @updatedAt

  @@unique([userId, senderEmail])
  @@index([userId])
}

model UserRule {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  isActive       Boolean  @default(true)
  // Conditions (all non-null conditions must match)
  senderPattern  String?  // glob-like pattern: "*@jira.company.com", "newsletter@*"
  subjectPattern String?  // substring match (case-insensitive)
  isMailingList  Boolean?
  hasAttachments Boolean?
  // Actions
  category       String?
  priority       Int?
  needsReply     Boolean?
  autoHandle     Boolean? // auto-mark as handled (archive)
  // Metadata
  matchCount     Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId, isActive])
}

model AutoAction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trigger     String   // "priority:5", "category:spam", "category:newsletter"
  action      String   // "handle", "archive", "mute-thread"
  isActive    Boolean  @default(true)
  matchCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, isActive])
}
